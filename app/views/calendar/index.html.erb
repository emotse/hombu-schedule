<h1>hello <%= current_user.email %></h1>
<h1>what we got so far</h1>

<div class="row">
  <div class="span12">
    <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
  </div>
</div>

<div class="row-fluid">
  <% @days.each_with_index do |day, day_number| %>
    <div class="row-fluid day">
      <h1 class="page-header"><small><%= day.day %></small></h1>
      <% @times.each do |time| %>
        <% teachers = ScheduledClass.get_by_day_and_time( day.day, time.time ) %>
        <% teachers.each do |teacher| %>
          <% if teacher != nil %>
            <div class="class well span2">
              <em class="time"><%= time.time %></em>
              <p class="name"><%= teacher.shihan.name_en %></p>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
