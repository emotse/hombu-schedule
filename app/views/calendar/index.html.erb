<h1>hello <%= current_user.email %></h1>
<h1>what we got so far</h1>

<table>
  <tbody>
    <tr>
      <td class="blank"></td>
      <% @days.each do |day| %>
        <td class="day">
          <p><%= day.day %></p>
        </td>
      <% end %>
    </tr>
    <% @times.each do |time| %>
      <tr>
        <td class="time">
          <p><%= time.time %></p>
        </td>
        <% @days.each do |day| %>
          <td class="teacher">
            <% teachers = ScheduledClass.get_by_day_and_time( day.day, time.time ) %>
            <% teachers.each do |teacher| %>
              <% if teacher != nil %>
                <p><%= teacher.shihan.name_en %></p>
              <% end %>
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
